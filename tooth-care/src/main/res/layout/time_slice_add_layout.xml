<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="cting.com.robin.support.toothcare.models.TimeSlice" />
        <import type="android.view.View.OnClickListener" />

        <variable
            name="item"
            type="TimeSlice" />

        <variable
            name="clickListener"
            type="OnClickListener" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/time_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/end_time_edit"
            app:layout_constraintStart_toEndOf="@+id/start_time_edit"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{item.duration}"
            tools:text="1h 20m" />

        <EditText
            android:id="@+id/start_time_edit"
            android:layout_width="@dimen/time_slice_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:ems="10"
            android:inputType="time"
            android:text="@={item.startTime}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/end_time_edit"
            android:layout_width="@dimen/time_slice_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:ems="10"
            android:inputType="time"
            android:text="@={item.endTime}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/start_time_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="@dimen/time_slice_add_btn_width"
            android:layout_height="@dimen/time_slice_add_btn_width"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle_red_background"
            android:onClick="@{clickListener::onClick}"
            android:text="+"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.732"
            app:layout_constraintStart_toEndOf="@+id/end_time_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498" />


    </android.support.constraint.ConstraintLayout>
</layout>
