<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="cting.com.robin.support.toothcare.models.TimeSlice" />

        <variable
            name="item"
            type="TimeSlice" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/start_time_container"
            android:layout_width="@dimen/time_slice_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="start time"
                android:inputType="time"
                android:text="@{item.startTime}" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/end_time_container"
            android:layout_width="@dimen/time_slice_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/start_time_container"
            app:layout_constraintStart_toEndOf="@+id/start_time_container"
            app:layout_constraintTop_toTopOf="@+id/start_time_container"
            app:layout_constraintVertical_bias="1.0">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="end time"
                android:inputType="time"
                android:text="@{item.endTime}" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/time_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@{item.duration}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.726"
            app:layout_constraintStart_toEndOf="@+id/end_time_container"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1h 20m" />


    </android.support.constraint.ConstraintLayout>
</layout>
