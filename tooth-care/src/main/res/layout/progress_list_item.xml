<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="cting.com.robin.support.toothcare.models.ProgressRecord" />
        <variable
            name="item"
            type="ProgressRecord" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_layout_container_padding">

        <TextView
            android:id="@+id/progress_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@{@string/progress_record_day_index(item.progressIndex, item.dayCount)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="第2副（8天）" />

        <TextView
            android:id="@+id/progress_total_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{item.totalTime}"
            app:layout_constraintBottom_toBottomOf="@+id/progress_title_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.813"
            app:layout_constraintStart_toEndOf="@+id/progress_title_text"
            app:layout_constraintTop_toTopOf="@+id/progress_title_text"
            app:layout_constraintVertical_bias="0.0"
            tools:text="162h 33m" />
    </android.support.constraint.ConstraintLayout>
</layout>
