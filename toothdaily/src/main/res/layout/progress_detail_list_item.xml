<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/day_index_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Day 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        tools:text="2017/10/30"
        app:layout_constraintBottom_toBottomOf="@+id/day_index_text"
        app:layout_constraintStart_toEndOf="@+id/day_index_text"
        app:layout_constraintTop_toTopOf="@+id/day_index_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/daily_time_total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/date_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/date_text"
        app:layout_constraintVertical_bias="0.0"
        tools:text="12h" />
</android.support.constraint.ConstraintLayout>