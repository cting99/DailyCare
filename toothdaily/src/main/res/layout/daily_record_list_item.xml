<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="cting.com.robin.toothdaily.model.ProgressDetailItem" />

        <variable
            name="detail"
            type="ProgressDetailItem" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <TextView
            android:id="@+id/day_index_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{@string/progress_detail_item_day_index(detail.dayIndex)}"
            tools:text="Day 1" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/day_index_text"
            app:layout_constraintStart_toEndOf="@+id/day_index_text"
            app:layout_constraintTop_toTopOf="@+id/day_index_text"
            app:layout_constraintVertical_bias="0.0"
            android:text="@{detail.date}"
            tools:text="2017/10/30" />

        <TextView
            android:id="@+id/daily_time_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/date_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/date_text"
            app:layout_constraintVertical_bias="0.0"
            android:text="@{detail.totalTime}"
            tools:text="12h" />
    </android.support.constraint.ConstraintLayout>
</layout>
